<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane minWidth="700.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="Paramètres">
               <items>
                  <MenuItem mnemonicParsing="false" text="Ajuster les pondérations" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Gestion des adolescents">
               <items>
                  <MenuItem mnemonicParsing="false" text="Importer fichier(s) csv..." />
                  <MenuItem mnemonicParsing="false" text="Modifier la liste des adolescents..." />
                  <MenuItem mnemonicParsing="false" text="Ajouter un adolescent..." />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="55.0" prefWidth="640.0" spacing="5.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Label text="Pays accueillant" />
                              <ChoiceBox fx:id="hostCountryChoiceBox" prefWidth="150.0" />
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Label text="Pays visiteur" />
                              <ChoiceBox fx:id="guestCountryChoiceBox" prefWidth="150.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="37.0" prefWidth="700.0">
                     <children>
                        <Label text="Hôte">
                           <HBox.margin>
                              <Insets right="50.0" />
                           </HBox.margin>
                        </Label>
                        <Label text="Invité">
                           <padding>
                              <Insets left="110.0" />
                           </padding>
                        </Label>
                        <Label text="Critères">
                           <padding>
                              <Insets left="132.0" />
                           </padding>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </VBox>
            <ScrollPane fitToWidth="true" prefHeight="214.0" prefWidth="783.0" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="affectationContainer" minWidth="651.0" spacing="15.0" />
               </content>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </ScrollPane>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="36.0" prefWidth="743.0" spacing="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="optimalAffectationsButton" disable="true" mnemonicParsing="false" text="Affectation optimale" />
            <Button fx:id="saveButton" contentDisplay="RIGHT" defaultButton="true" disable="true" mnemonicParsing="false" text="Enregistrer" />
         </children>
         <BorderPane.margin>
            <Insets top="25.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
